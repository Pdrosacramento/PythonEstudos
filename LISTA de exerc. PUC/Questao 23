rr=0
pcb=0
o=0
i=0
for mu in range(1,6):
    m=int(input('O que voce achou do filme?/n Otimo-3 Bom-2 Regular-1 '))
    g=int(input('Qual sua idade?'))
    if m==1:
            rr=rr+1
    if m==2:
            pcb=pcb+1
    if m==3:
            o=o+1
            i+=g
print('Media de idade de quem votou Otimo: ',i/2)

print('Quantidade de pessoas que votou regular: ',rr)

print('% de quem respondeu Bom: ',pcb*100/5)
